<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dlw.payrollinfoapp" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>DLW Employee Payslip</name>
    <description>
 This app may enable staff of DLW to enquire about their salary(Gross,Deduction and Net Pay), PF Balance and Leave Balance. </description>
    <author email="info@ntsoft.in" href="http://ntsoft.in">
        NTSOFT Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
